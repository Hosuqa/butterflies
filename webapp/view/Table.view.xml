<mvc:XMLView
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
    controllerName="butterflies.controller.Table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Table 
        id="mainTable"
        rows="{/butterflies}"
        selectionMode="MultiToggle">
        <extension>
            <m:OverflowToolbar style="Clear">
                <m:Title id="title" text="{i18n>tableTitle}"/>
                <m:ToolbarSpacer />
                <m:Button icon="sap-icon://sorting-ranking"
                        tooltip="Sort alphabetically"/>

                <m:SearchField width="11rem"
                               placeholder="{i18n>searchField}"/>
            </m:OverflowToolbar>
             <m:OverflowToolbar style="Clear">
                <m:Button icon="sap-icon://add" />
                <m:Button icon="sap-icon://duplicate" />
                <m:Button icon="sap-icon://sum"/>
                <m:Button icon="sap-icon://delete" type="Emphasized" />
                <m:ToolbarSpacer />
				<m:Button text="{i18n>editValuesButton}" />
				<m:Button icon="sap-icon://edit" text="{i18n>editModeButton}"/>
            </m:OverflowToolbar>
        </extension>
        <Column >
            <m:Label text="{i18n>nameLabel}"/>
            <template>
                <m:Text text="{Name}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>familyLabel}"/>
            <template>
                <m:Text text="{Family}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>locationLabel}"/>
            <template>
                <m:Text text="{Location}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>dateLabel}"/>
            <template>
                <m:Text text="{Date}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>wingspanLabel}"/>
            <template>
                <m:Text text="{Wingspan}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>weightLabel}"/>
            <template>
                <m:Text text="{Weight}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>priceLabel}"/>
            <template>
                <m:Text text="{Price}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>abundanceLabel}"/>
            <template>
                <m:Text text="{Abundance}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>colorRatingLabel}"/>
            <template>
                <m:Text text="{Color Rating}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>habitatLabel}"/>
            <template>
                <m:Text text="{Habitat}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>lifespanLabel}"/>
            <template>
                <m:Text text="{Lifespan}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>migrationLabel}"/>
            <template>
                <m:Text text="{Migration Pattern}" wrapping="false"></m:Text>
            </template>
        </Column>
        <Column >
            <m:Label text="{i18n>threatLabel}"/>
            <template>
                <m:Text text="{Threat Level}" wrapping="false"></m:Text>
            </template>
        </Column>
    </Table>


</mvc:XMLView>